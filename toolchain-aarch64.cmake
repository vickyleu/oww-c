if(NOT DEFINED ENV{XTOOLS})
  message(FATAL_ERROR "请设定环境变量 XTOOLS 指向 aarch64 工具链根目录")
endif()

set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR aarch64)
set(CMAKE_C_COMPILER   $ENV{XTOOLS}/bin/aarch64-unknown-linux-gnu-gcc)
set(CMAKE_CXX_COMPILER $ENV{XTOOLS}/bin/aarch64-unknown-linux-gnu-g++)
set(CMAKE_C_COMPILER_TARGET aarch64-unknown-linux-gnu)
set(CMAKE_CXX_COMPILER_TARGET aarch64-unknown-linux-gnu)
set(CMAKE_SYSROOT      $ENV{XTOOLS}/aarch64-unknown-linux-gnu/sysroot)
set(CMAKE_FIND_ROOT_PATH ${CMAKE_SYSROOT})
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
